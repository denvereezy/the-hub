<div class="container-fluid">
  <div class="container-fluid">

    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
<form class="col-md-8" action="/signup/add" method="post">

     <h1>Registration</h1>

     <h2>Organization details </h2>

     <div class="form-group">
       <label for="name">Company Name</label>
       <input type="text" class="form-control" id="name" name="name">
     </div>
     <div class="form-group">
       <label for="address ">Address</label>
       <input type="text" class="form-control" id="address" name="address">
     </div>
     <div class="form-group">
       <label for="logo ">Logo</label>
       <input type="text" class="form-control" id="logo " name="logo">
     </div>
     <div class="form-group">
       <label for="logo ">Role</label>
       <select class="form-control" name="type">
         <option class="form-control">Donor</option>
         <option class="form-control">Facilitator</option>
         <option class="form-control">Startup</option>
       </select>
     </div>

     <h2>User details </h2>

     <div class="form-group">
       <label for="name">First Name</label>
       <input type="text" class="form-control" id="name" name="firstName">
     </div>
     <div class="form-group">
       <label for="address ">Last Name</label>
       <input type="text" class="form-control" id="address" name="lastName">
     </div>
     <div class="form-group">
       <label for="logo ">Email</label>
       <input type="email" class="form-control" id="logo " name="email">
     </div>

     <button type="submit" class="btn btn-success">Register on the Hub</button>

   </form>
